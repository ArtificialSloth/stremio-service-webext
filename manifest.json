{
    "name": "Stremio Service",
    "short_name": "StremioService",
    "description": "Manages the Stremio Service while browsing web.stremio.com",
    "manifest_version": 3,
    "version": "0.1.0",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },

    "browser_action": {
        "default_title": "Go to web.stremio.com"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "stremio-extension@artificialsloth.stremio-extension",
            "strict_min_version": "109.0"
        }
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": ["nativeMessaging", "tabs"]
}
